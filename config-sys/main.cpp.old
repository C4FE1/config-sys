#include <iostream>
#include <string>

using namespace std;

int main(int argc, char *argv[])
{

    bool flag_add = false, flag_u = false, flag_o = false;

    // Verificando argumentos da linha de comando
    for (int i = 1; i < argc; i++) {
        if (string(argv[i]) == "--add") {
            flag_add = true;
            flag_u = false;
            printf("Argumento:%s", argv[i]);
        } else if (string(argv[i]) == "-u") {
            flag_u = true;
        } else if (string(argv[i]) == "-o") {
            flag_o = true;
        } else {
            cerr << "Argumento inválido: " << argv[i] << endl;
            return 1;
        }
    }

    // Exibindo argumentos de acordo com as opções
    if (flag_add) {
        cout << "Argumento a: " << endl;
    }
    if (flag_u) {
        cout << "Argumento b: " << endl;
    }
    if (flag_o) {
        cout << "Olá!" << endl;
    }

    return 0;
}
